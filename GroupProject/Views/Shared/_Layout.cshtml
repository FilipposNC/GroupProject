<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.min.js" integrity="sha384-Atwg2Pkwv9vp0ygtn1JAojH0nYbwNJLPhwyoVbhoPwBhjQPR5VtM2+xf0Uwh9KtT" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Content/admin-css/all.min.css">

    <body style="background-color: black;">
        <div class="layout-top" style="font-size: 15px;">
            <div class="upper-menu" style="display:flex; justify-content:space-between; padding-left: 70px; padding-top: 15px; padding-bottom:10px; background-color: #010102;">
                <div class="top-nav-home-link text-capitalize">
                    <a href="@Url.Action("Index", "Home", new {area="" })" style="text-decoration:none; font-weight:bold;"> <i class="fas fa-stethoscope fa-lg"></i> the Dr.<span style="color: #ffd752;">builder</span> Project</a>
                </div>

                <div>
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
            <nav class="navbar navbar-expand-lg navbar-dark" style="padding:0px 30px; background-color: #09090F; border:1px solid #181827">
                <div class="container-fluid">

                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNavDropdown" style="padding-left: 30px; padding-top: 5px; padding-bottom:5px;">
                        <ul class="navbar-nav es">
                            <li class="nav-item">
                                <div class="colors-tochange">
                                    <a class="dropdown-item" href="@Url.Action("MyBuilds","Builds", new { area =""})" style=" font-weight:bold; color:white; border-right: 1px solid #181827; padding:8px 15px;">
                                        <span><i class="bi bi-pc-display"></i> My Builds</span>
                                    </a>
                                </div>
                            </li>
                            <li class="nav-item">
                                <a class="dropdown-item " href="@Url.Action("Create", "Builds", new {area="" })" style=" font-weight:bold; color:white; border-right: 1px solid #181827; padding:10px 15px;">
                                    <span><i class="bi bi-tools"></i> System Builder</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="dropdown-item" href="@Url.Action("Index", "Builds", new {area="" })" style="font-weight: bold; color:white; border-right: 1px solid #181827; padding: 10px 15px;">
                                    <span><i class="bi bi-pc-display-horizontal"></i> All Builds</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <div class="colors-tochange">
                                    <a class="dropdown-item" href="@Url.Action("Index","SuggestedBuilds", new { area = "Admin"})" style=" font-weight:bold; color:white; border-right: 1px solid #181827; padding:8px 15px;">
                                        <span><i class="bi bi-pc"></i> Suggested Builds</span>
                                    </a>
                                </div>
                            </li>
                            <li class="nav-item">
                                <div class="colors-tochange">
                                    <a class="dropdown-item" href="@Url.Action("PCParts", "Home", new {area="" })" style=" font-weight:bold; color:white; border-right: 1px solid #181827; padding:8px 15px;">
                                        <span><i class="bi bi-cpu"></i> All Parts</span>
                                    </a>
                                </div>
                            </li>
                            <li class="nav-item">
                                <div class="colors-tochange">
                                    <a class="dropdown-item" href="@Url.Action("Index", "Donates", new {area="" })" style=" font-weight:bold; color:white; border-right: 1px solid #181827; padding:8px 15px;">
                                        <span><i class="bi bi-piggy-bank"></i> Donate</span>
                                    </a>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </div>

        <div>
            @RenderBody()
        </div>

        <!-- Footer -->
        <footer class="text-center text-lg-start text-muted " style="font-size: 20px; background-color: #010102;">
            <!-- Section: Social media -->
            <section class="d-flex justify-content-center justify-content-lg-between p-4 border-bottom">
            </section>
            <!-- Section: Social media -->
            <!-- Section: Links  -->
            <section class="">
                <div class="container text-center text-md-start mt-5">
                    <!-- Grid row -->
                    <div class="row mt-3">
                        <!-- Grid column -->
                        <div class="col-md-3 col-lg-4 col-xl-3 mx-auto mb-4">
                            <!-- Content -->
                            <h4 class="text-capitalize fw-bold mb-4" style="color:whitesmoke;">
                                <i class="fas fa-stethoscope fa-lg"></i> dr.<span style="color: #ffd752;">builder</span> Project
                            </h4>
                            <p style="font-size:20px; font-weight:bolder; color:whitesmoke;">
                                PICK PARTS<br />
                                BUILD YOUR PC<br />
                                COMPARE AND SHARE
                            </p>
                        </div>
                        <!-- Grid column -->
                        <!-- Grid column -->
                        <div class="col-md-2 col-lg-2 col-xl-2 mx-auto mb-4 links">
                            <!-- Links -->
                            <h6 class="text-uppercase fw-bold mb-4" style="color:white;">
                                Technologies Used
                            </h6>
                            <p>
                                <a href="https://dotnet.microsoft.com/en-us/apps/aspnet" target="_blank">ASP.NET MVC</a>
                            </p>
                            <p>
                                <a href="https://www.microsoft.com/en-us/sql-server/" target="_blank">Microsoft SQL</a>
                            </p>
                            <p>
                                <a href="https://jquery.com/" target="_blank">JQuery</a>
                            </p>
                            <p>
                                <a href="https://docs.microsoft.com/en-us/ef/" target="_blank">Entity Framework</a>
                            </p>
                        </div>
                        <!-- Grid column -->
                        <!-- Grid column -->
                        <div class="col-md-3 col-lg-2 col-xl-2 mx-auto mb-4 links">
                            <!-- Links -->
                            <h6 class="text-uppercase fw-bold mb-4" style="color:white;">
                                Useful links
                            </h6>
                            <p>
                                <a href="@Url.Action("Contact", "Home", new {area = ""})">Contact Us</a>
                            </p>
                            <p>
                                <a href="@Url.Action("About", "Home", new {area = ""})">The Team</a>
                            </p>
                            <p>
                                <a href="@Url.Action("Index", "Donates", new {area = ""})">Support Us</a>
                            </p>
                            <p>
                                <a href="@Url.Action("Help", "Home", new {area = ""})">Help</a>
                            </p>
                        </div>
                        <!-- Grid column -->
                        <!-- Grid column -->
                        <div class="col-md-4 col-lg-3 col-xl-3 mx-auto mb-md-0 mb-4" style="color:white;">
                            <!-- Links -->
                            <h6 class="text-uppercase fw-bold mb-4">
                                Contact
                            </h6>
                            <p><i class="fas fa-home me-3"></i> New York, NY 10012, US</p>
                            <p>
                                <i class="fas fa-envelope me-3"></i>
                                pcbuild@dr_builder.com
                            </p>
                            <p><i class="fas fa-phone me-3"></i> + 01 234 567 88</p>
                            <p><i class="fas fa-print me-3"></i> + 01 234 567 89</p>
                        </div>
                        <!-- Grid column -->
                    </div>
                    <!-- Grid row -->
                </div>
            </section>
            <!-- Section: Links  -->
            <!-- Copyright -->
            <footer class="main-footer" style="text-align: center;">
                <strong>Copyright &copy; 2021 - @DateTime.Now.Year Dr.Builder</strong>
                All rights reserved.
                <div class="float-right d-none d-sm-inline-block">
                    <b>Version</b> 1.0.0
                </div>
            </footer>
            <!-- Copyright -->
        </footer>
        <!-- Footer -->

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
